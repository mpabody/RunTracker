@model IEnumerable<RunTracker.Models.ShoeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>My Shoes</h2>

<p>
    @Html.ActionLink("Add a New Shoe", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortAlph })
        </th>
        <th>
            @Html.ActionLink("MilesRun", "Index", new { sortOrder = ViewBag.MilesRunSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MilesRun)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ShoeID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ShoeID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
    </td>
</tr>
}

</table>
