@model IEnumerable<RunTracker.Models.WorkoutListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Workouts</h2>

<p>
    @Html.ActionLink("Add A New Workout", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSort })
        </th>
        <th>
            @Html.ActionLink("Distance", "Index", new { sortOrder = ViewBag.DistSort })
        </th>
        <th>
            @Html.ActionLink("Shoe", "Index", new { sortOrder = ViewBag.ShoeSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shoe.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WorkoutID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WorkoutID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WorkoutID })
        </td>
    </tr>
}

</table>
